@page


<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>Biblioteka - Logowanie</title>
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <header>
        <div class="loginHeader">Zaloguj się do Biblioteki</div>
    </header>
    <main>
        <div id="container">
            <form method="post">
                <input type="text" name="login" placeholder="Login" onfocus="this.placeholder=''" onblur="this.placeholder='Login'">
                <input type="password" name="password" placeholder="Hasło" onfocus="this.placeholder=''" onblur="this.placeholder='Hasło'">
                <input type="submit" value="Zaloguj się">
                <p id="brakKonta">Nie masz konta? <a href="/Register" id="rejestracja">Zarejestruj się.</a></p>
            </form>
        </div>
    </main>
</body>
</html>